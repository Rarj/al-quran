<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  tools:context="rio.arj.detail.ui.DetailAyahActivity">

  <data>
    <import type="android.view.View" />
    <variable
      name="detailAyahViewModel"
      type="rio.arj.detail.ui.DetailAyahViewModel" />
    <variable
      name="dataModel"
      type="rio.arj.data.repository.list.Data" />
    <variable
      name="isSuccess"
      type="Boolean" />
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
      android:id="@+id/toolbar_ayah"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:background="@color/persian_green_02B19C"
      app:contentInsetStartWithNavigation="0dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:navigationIcon="@drawable/ic_arrow_left"
      app:title="@{dataModel.nama}"
      app:titleTextAppearance="@style/TextAppearance.AppCompat.Large"
      app:titleTextColor="@color/white_FFFFFF"
      tools:title="Al Fatihah" />

    <androidx.core.widget.NestedScrollView
      android:id="@+id/scroll_view"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/toolbar_ayah">

      <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
          android:id="@+id/extended_toolbar"
          android:layout_width="0dp"
          android:layout_height="72dp"
          android:background="@color/persian_green_02B19C"
          android:visibility="@{detailAyahViewModel.hideBismismillah ? View.GONE : View.VISIBLE}"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
          android:id="@+id/container_card"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/margin_24"
          android:layout_marginEnd="@dimen/margin_24"
          android:visibility="@{detailAyahViewModel.hideBismismillah ? View.GONE : View.VISIBLE}"
          app:cardCornerRadius="10dp"
          app:layout_constraintBottom_toBottomOf="@id/extended_toolbar"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/extended_toolbar">

          <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
              android:id="@+id/text_ayah_arabic"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/margin_8"
              android:layout_marginTop="@dimen/margin_8"
              android:layout_marginEnd="@dimen/margin_8"
              android:gravity="center_horizontal"
              android:text="@string/detail_bismillah_ar"
              android:textAppearance="@style/TextAppearance.AppCompat.Large"
              android:textColor="@color/black_000000"
              android:textStyle="bold"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
              android:id="@+id/text_ayah_arabic_translate"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/margin_8"
              android:layout_marginEnd="@dimen/margin_8"
              android:gravity="center_horizontal"
              android:singleLine="true"
              android:text="@string/detail_bismillah_id"
              android:textAppearance="@style/TextAppearance.AppCompat.Small"
              android:textColor="@color/black_000000"
              android:textStyle="bold"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/text_ayah_arabic" />

            <androidx.appcompat.widget.AppCompatTextView
              android:id="@+id/text_ayah_mean"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/margin_8"
              android:layout_marginEnd="@dimen/margin_8"
              android:gravity="center_horizontal"
              android:text="@string/detail_bismillah_mean"
              android:textAppearance="@style/TextAppearance.AppCompat.Small"
              android:textColor="@color/persian_green_02B19C"
              android:textStyle="italic"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/text_ayah_arabic_translate" />

            <androidx.appcompat.widget.AppCompatTextView
              android:id="@+id/text_surah_type"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/margin_8"
              android:layout_marginTop="@dimen/margin_8"
              android:layout_marginEnd="@dimen/margin_8"
              android:layout_marginBottom="@dimen/margin_8"
              android:text="@{dataModel.type}"
              android:textAllCaps="true"
              android:textColor="#FC9942"
              android:textStyle="bold"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/text_ayah_mean"
              app:layout_goneMarginBottom="@dimen/margin_8"
              tools:text="MEKAH" />

            <View
              android:id="@+id/divider_2"
              android:layout_width="1dp"
              android:layout_height="0dp"
              android:layout_marginStart="@dimen/margin_8"
              android:layout_marginTop="4dp"
              android:layout_marginEnd="@dimen/margin_8"
              android:layout_marginBottom="4dp"
              android:background="#FC9942"
              app:layout_constraintBottom_toBottomOf="@id/text_surah_type"
              app:layout_constraintStart_toEndOf="@id/text_surah_type"
              app:layout_constraintTop_toTopOf="@id/text_surah_type" />

            <androidx.appcompat.widget.AppCompatTextView
              android:id="@+id/text_total_ayah"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/margin_8"
              android:layout_marginTop="@dimen/margin_8"
              android:layout_marginEnd="@dimen/margin_8"
              android:layout_marginBottom="@dimen/margin_8"
              android:text="@{dataModel.ayat.toString() + ` Ayat` }"
              android:textColor="#FC9942"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toEndOf="@id/divider_2"
              app:layout_constraintTop_toBottomOf="@id/text_ayah_mean"
              app:layout_goneMarginBottom="@dimen/margin_8"
              tools:text="7 Ayat" />

          </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/recycler_ayah"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/margin_8"
          android:overScrollMode="never"
          android:scrollbars="vertical"
          android:visibility="@{isSuccess ? View.VISIBLE : View.GONE}"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/container_card"
          tools:listitem="@layout/item_ayah" />

      </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <ProgressBar
      android:id="@+id/progress_circular"
      style="@style/Widget.AppCompat.ProgressBar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:indeterminate="true"
      android:visibility="@{isSuccess ? View.GONE : View.VISIBLE}"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@id/toolbar_ayah" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>